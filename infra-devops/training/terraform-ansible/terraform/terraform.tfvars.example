# Example terraform.tfvars file
# Copy this to terraform.tfvars and fill in your actual values

# AWS Configuration
aws_region    = "us-west-2"
project_name  = "terraform-ansible-stack"
environment   = "dev"

# EC2 Configuration
instance_type   = "t3.medium"
key_pair_name   = "your-key-pair-name"  # Replace with your AWS key pair name

# S3 Configuration
s3_bucket_name = "your-unique-bucket-name-12345"  # Must be globally unique

# Neon PostgreSQL Configuration
neon_api_key      = "your-neon-api-key"
neon_project_name = "terraform-postgres"

# Upstash Redis Configuration
upstash_email   = "your-email@example.com"
upstash_api_key = "your-upstash-api-key"

# MongoDB Atlas Configuration
mongodbatlas_public_key  = "your-mongodb-atlas-public-key"
mongodbatlas_private_key = "your-mongodb-atlas-private-key"
mongodbatlas_org_id      = "your-mongodb-atlas-org-id"
mongodb_cluster_name     = "terraform-cluster"
mongodb_username         = "admin"
mongodb_password         = "your-secure-password"
